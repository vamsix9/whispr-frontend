{
  "name": "whispr-frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "preview": "vite preview",
    "compile:scripts": "tsc --project tsconfig.scripts.json",
    "update:bff:contract": "yarn compile:scripts && node dist/scripts/contract-update-bff.js",
    "generate:client:sdk": "yarn compile:scripts && node dist/scripts/generate-client-sdk.js",
    "update:schema": "npm run update:bff:contract && npm run generate:client:sdk",
    "codegen": "openapi-generator-cli generate -i ./openapi-bff.yml -o client-sdk -g typescript-axios"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.846.0",
    "@aws-sdk/lib-storage": "^3.787.0",
    "aws-sdk": "^2.1692.0",
    "dotenv": "^16.5.0",
    "fs": "^0.0.1-security",
    "path": "^0.12.7",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "stream": "^0.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,html,css,yml,yaml}": [
      "prettier --write"
    ]
  }
}
